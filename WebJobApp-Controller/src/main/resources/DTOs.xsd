<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:complexType name="JobDataXSD">
        <xs:all>
            <xs:element name="jobID" type="xs:int"/>
            <xs:element name="jobName" type="xs:string"/>
            <xs:element name="jobRequiredEducation">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="MIDDLE_SCOOL"/>
                        <xs:enumeration value="HIGH_SCOOOL"/>
                        <xs:enumeration value="UNIVERSITY"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="jobDescription" type="xs:string"/>
            <xs:element name="jobSalary" type="xs:int"/>
            <xs:element name="jobCategory" type="xs:string"/>
        </xs:all>
    </xs:complexType>
</xs:schema>